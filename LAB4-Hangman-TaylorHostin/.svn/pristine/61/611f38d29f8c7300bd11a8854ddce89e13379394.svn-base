            Canvas.AddLine(point2, 150, Math.PI/2, Color.Turquoise, 4);
            
            Point point3 = new Point();

            point3.X = 225;
            point3.Y = 450;

            Canvas.AddLine(point3, 150, Math.PI/2, Color.Turquoise, 4);

            Point point4 = new Point();

            point4.X = 380;
            point4.Y = 208;
            
            Canvas.AddLine(point4, 30, 0, Color.Brown, 2);

            Console.ReadLine();
        }

